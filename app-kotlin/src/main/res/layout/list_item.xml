<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/post_margin"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/post_item_image"
      android:layout_width="match_parent"
      android:layout_height="@dimen/post_image_height"
      android:gravity="center"
      app:srcCompat="@mipmap/ic_launcher"
      />
  <TextView
      android:id="@+id/post_item_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:background="@color/colorBlackOverlay"
      android:padding="@dimen/text_margin"
      android:text="Title"
      />
  <ProgressBar
      android:id="@+id/post_item_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      />
</FrameLayout>